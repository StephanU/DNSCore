	</bean>	
	<bean id="IngestScanAction" class="de.uzk.hki.da.cb.ScanAction" scope="prototype">
		<property name="startStatus" value="140" />
		<property name="endStatus" value="150" />
		<property name="name" value="IngestScanAction" />
